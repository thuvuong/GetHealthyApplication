<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food.BreakfastMealFragment">


    <TextView
        android:id="@+id/time_edit"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sub_title"
        android:ems="10"
        android:hint="@string/time_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHint="#F00" />

    <TextView
        android:id="@+id/beverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_edit"
        android:text="@string/beverage_consumption"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/beverage"
        android:layout_marginStart="40dp"
        android:text="@string/water"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/water"
        android:layout_marginTop="173dp"
        android:text="Other"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/water" />

    <EditText
        android:id="@+id/other_consume_edit"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/other"
        android:layout_alignStart="@+id/vegi_consume_edit"
        android:layout_marginStart="22dp"
        android:layout_alignLeft="@+id/vegi_consume_edit"
        android:layout_marginLeft="22dp" />

    <EditText
        android:id="@+id/vegi_consume_edit"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vegetable"
        android:layout_alignEnd="@+id/unit2"
        android:layout_alignRight="@+id/unit2" />

    <EditText
        android:id="@+id/fruit_consume_edit"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vegi_consume_edit"
        android:layout_below="@+id/vegi_consume_edit"
        android:layout_alignLeft="@+id/vegi_consume_edit" />

    <EditText
        android:id="@+id/meat_consume_edit"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meat"
        android:layout_alignStart="@+id/vegi_consume_edit"
        android:layout_alignLeft="@+id/vegi_consume_edit" />

    <EditText
        android:id="@+id/dairy_product_consume_edit"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vegi_consume_edit"
        android:layout_below="@+id/meat_consume_edit"
        android:layout_alignLeft="@+id/vegi_consume_edit" />

    <EditText
        android:id="@+id/grains_consume2_edit"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vegi_consume_edit"
        android:layout_below="@+id/fruit_consume_edit"
        android:layout_alignLeft="@+id/vegi_consume_edit" />

    <EditText
        android:id="@+id/food_name_edit"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/vegi_consume_edit"
        android:layout_marginTop="221dp"
        android:layout_alignLeft="@+id/vegi_consume_edit" />


    <EditText
        android:id="@+id/water_consume"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/water"
        android:layout_toEndOf="@+id/time_edit"
        android:layout_toRightOf="@+id/time_edit" />

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/vegi_consume_edit"
        android:layout_alignTop="@+id/other"
        android:text="@string/unit"
        android:textSize="16sp"
        android:layout_alignRight="@+id/vegi_consume_edit" />

    <TextView
        android:id="@+id/unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/beverage"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/unit"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/breakfast_meal_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/other_consume_edit"
        android:text="@string/lunch_btn"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/mealmessage"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/nutri"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/vegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="256dp"
        android:layout_marginStart="64dp"
        android:text="@string/vegi"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="64dp" />

    <TextView
        android:id="@+id/fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fruit_consume_edit"
        android:layout_toEndOf="@+id/water"
        android:text="@string/fruits"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/water" />

    <TextView
        android:id="@+id/Grains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meat_consume_edit"
        android:layout_toEndOf="@+id/water"
        android:text="@string/grains"
        android:layout_toRightOf="@+id/water" />

    <TextView
        android:id="@+id/meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="107dp"
        android:layout_toEndOf="@+id/water"
        android:text="@string/meat"
        android:layout_toRightOf="@+id/water" />

    <TextView
        android:id="@+id/dairy_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dairy_product_consume_edit"
        android:layout_alignEnd="@+id/vegetable"
        android:text="@string/dairy_product"
        android:layout_alignRight="@+id/vegetable" />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/food_name_edit"
        android:layout_alignStart="@+id/water"
        android:text="@string/food_name"
        android:layout_alignLeft="@+id/water" />

    <Button
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@android:color/holo_blue_light"
        android:text="@string/log" />

</RelativeLayout>