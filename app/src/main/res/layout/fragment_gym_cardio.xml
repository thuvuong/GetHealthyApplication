<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gym_cardio_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GymCardioFragment">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="167dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/get_healthy_app_logo" />

    <TextView
        android:id="@+id/name_of_the_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardio_type"
        android:layout_centerHorizontal="true"
        android:text="@string/name_of_the_fragment"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cardio_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gym_location"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-259dp"
        android:text="@string/cardio"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/gym_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="266dp"
        android:text="@string/gym" />

    <RelativeLayout
        android:id="@+id/gym_cardio_instruction"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="574dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

        </WebView>

    </RelativeLayout>
</RelativeLayout>