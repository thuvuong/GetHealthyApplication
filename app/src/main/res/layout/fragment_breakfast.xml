<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreakfastFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/food_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="@string/food_txt"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/healthy_recipes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_txt"
        android:layout_centerHorizontal="true"
        android:text="@string/healthy_recipes_btn"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:text="@string/day_of_meal_breakfast"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chef2_txt"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/food_txt"
        android:layout_alignRight="@id/food_txt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="@string/chef_jamie_oliver"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chef1_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="196dp"
        android:text="@string/chef_gordon_ramsay"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gordon_btn"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:text="@string/gordon_ramsay_s_scambled_eggs" />

    <Button
        android:id="@+id/jamie1_btn"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:text="@string/beautiful_breakfast_tortillas" />

    <Button
        android:id="@+id/jamie2_btn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="@string/my_brilliant_breakfast" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/food_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-51dp"
        android:src="@drawable/get_healthy_app_logo" />

</RelativeLayout>